# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-from-gcp-console
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Gemini API
GEMINI_API_KEY=your-gemini-api-key-from-ai-google-dev

# Firebase/Firestore
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="your-firebase-private-key-from-service-account-json"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Admin
ADMIN_EMAIL=archeryue7@gmail.com

# Feature Flags (optional)
# Enable intelligent analysis (PromptAnalysis + ContextEngineering)
# Set to 'true' to use new AI-powered architecture instead of keywords
NEXT_PUBLIC_USE_INTELLIGENT_ANALYSIS=false

# Enable web search capability
# Set to 'true' after configuring Google Custom Search API
NEXT_PUBLIC_USE_WEB_SEARCH=false

# Google Custom Search API (optional, only needed if USE_WEB_SEARCH=true)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create search engine at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# Jina.ai Reader API (optional, improves web content fetching)
# Get API key from: https://jina.ai/reader
# With API key: 200 requests/minute | Without: 20 requests/minute
JINA_API_KEY=your-jina-api-key

# Production URL (for robots.txt and other production configs)
NEXT_PUBLIC_PRODUCTION_URL=https://your-app-name.region.run.app

# Cloudflare R2 Storage (for image persistence)
# Create bucket at: https://dash.cloudflare.com â†’ R2
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=whimcraft-images
R2_PUBLIC_URL=https://pub-xxx.r2.dev
